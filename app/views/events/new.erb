<h2>New Event</h2>

<form action="/events" method="post">
    <table>
        <tr>
            <td>Title: </td>
            <td><input type="text" name="event[title]"></td>
        </tr>
        <tr>
            <td>Day of week: </td>
            <td><input type="text" name="event[event_time]"></td>
        </tr>
        <tr>
            <td>Location: </td>
            <td><input type="text" name="event[location]"></td>
        </tr>
        <tr>
            <td>Description: </td>
            <td><textarea name="event[description]"></textarea></td>
        </tr>
    </table>    
    <br>
    <input type="submit">
</form>