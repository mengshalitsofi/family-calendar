<h3>Login</h3>

<% if @error %>
    <div style="color: red">
        <%=@error%>
    </div>
<%end%>

<form action="/login" method="post">
    <table>
        <tr>
            <td>Username: </td>
            <td><input type="text" name="user_name"></td>
        </tr>
        <tr>
            <td>Password: </td>
            <td><input type="password" name="password"></td>
        </tr>
    </table>
    <br>
    <input type="submit">
</form>